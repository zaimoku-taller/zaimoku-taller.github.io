---
import {Image} from "astro:assets";
import Menu from "../components/react/Menu";
import FooterSite from "../components/FooterSite.astro";
import fondo from "../assets/img/fondo.jpg";
interface Props {
    title: string;
}

const {title} = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="">
        <div class="fixed left-0 top-0 w-screen h-screen -z-20">
            <div class="relative w-screen h-screen">
                <div
                    class="backdrop-blur-md absolute top-0 left-0 w-screen h-screen -z-30"
                >
                </div>
                <div
                    class="absolute top-0 left-0 -z-40 bg-gradient-to-tl from-orange-900 via-black/70 to-black/70 w-screen h-screen"
                >
                </div>
                <div
                    class="-z-20 absolute bg-gradient-to-t from-black/0 via-black/0 to-black backdrop-blur-md top-0 left-0 w-full h-[calc(100vh-6rem)]"
                >
                </div>
                <Image
                    class="absolute top-0 left-0 -z-50 w-screen h-screen object-cover"
                    src={fondo}
                    loading="eager"
                    alt="fondo pantalla"
                />
            </div>
        </div>
        <header
            class="lg:w-7/12 md:w-12/12 sm:w-10/12 w-full px-6 sm:mx-auto my-2"
        >
            <Menu client:visible />
        </header>
        <main
            class="lg:w-7/12 md:w-12/12 sm:w-10/12 w-full px-6 sm:mx-auto my-2"
        >
            <slot />
        </main>
        <FooterSite />
    </body>
    <style is:global>
        :root {
            color-scheme: light dark;
        }
        h1 {
            @apply my-1 text-4xl sm:text-5xl md:text-6xl uppercase font-extrabold text-orange-700;
        }
        h2 {
            @apply my-1 text-3xl sm:text-4xl md:text-5xl capitalize font-bold text-orange-600;
        }
        h3 {
            @apply my-1 text-2xl sm:text-3xl md:text-4xl capitalize font-semibold text-orange-500;
        }
        h4 {
            @apply my-1 text-xl sm:text-2xl md:text-3xl capitalize text-orange-400;
        }
    </style>
</html>
